<h2>Edit a Vimeo Video</h2>

<ul class="errors">
  <% @vimeo_video.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>

<%= form_for @vimeo_video do |f| %>
  <p>
    <%= f.label :url, 'URL of Vimeo Video' %>
    <%= f.text_field :url %><br/>
  </p>
  <p>
    <%= f.label :description, 'Short Description' %>
    <%= f.text_area :description %><br/>
  </p>
  <p>
    <%= f.label :rating, 'Rating' %>
    <%= f.text_field :rating %><br/>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<p class="success"><%= notice %></p>

<div class="media_container">
  <iframe src="<%= @vimeo_video_url %>" width="420" height="315" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>

  <p>Rating: <%= @vimeo_video.rating %> out of 5</p>
</div>

<div class="media_description">
  <p>
    <a href="<%= @vimeo_video.url %>"><%= @vimeo_video.url %></a>&nbsp;&nbsp;&nbsp;<a href="/vimeo_videos/<%= @vimeo_video.id %>/edit">(Edit)</a>
  </p>

  <p>
    <%= simple_format(@vimeo_video.description) %>
  </p>

  <%= button_to "Delete", vimeo_video_path(@vimeo_video), method: :delete, class: "delete", data: {confirm: "Are you sure?"} %>
</div>
